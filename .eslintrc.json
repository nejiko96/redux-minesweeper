{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "no-bitwise": "off",
        "no-plusplus": "off",
        "no-param-reassign": ["error", { "props": false }],
        "react/jsx-filename-extension": ["warn", { "extensions": [".js", ".jsx"] }]
    }
}
